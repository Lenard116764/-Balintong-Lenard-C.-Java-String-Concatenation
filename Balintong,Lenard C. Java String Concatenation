public class StringConcatenation {
    public static void main(String[] args) {
        
        String str1 = "Lenard";    
        String str2 = "Balintong"; 
        
        
        int len1 = 6;  
        int len2 = 9;  
      
        char[] str3 = new char[len1 + len2];
        
        
        int i = 0;
        
        
        while (i < len1) {
            str3[i] = str1.charAt(i);
            i++;
        }
        
        
        int j = 0;
        while (i < (len1 + len2)) {
            str3[i] = str2.charAt(j);
            j++;
            i++;
        }
        
        
        System.out.println("Concatenated String: " + new String(str3));
    }
}
